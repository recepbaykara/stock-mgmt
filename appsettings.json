{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "StockMgmt.Common.Logging.CustomJsonFormatter, StockMgmt"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/stock-mgmt-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 30,
          "formatter": "StockMgmt.Common.Logging.CustomJsonFormatter, StockMgmt"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=stockdb;Username=stockuser;Password=stockpass"
  },
  "EmailSettings": {
    "SmtpServer": "smtp.ethereal.email",
    "SmtpPort": 587,
    "SenderName": "StockMgmt System",
    "SenderEmail": "noreply@stock-mgmt.com",
    "Username": "dorothea.dare@ethereal.email",
    "Password": "ASEvj26v48VY2Hyzb9",
    "EnableSsl": true
  }
}